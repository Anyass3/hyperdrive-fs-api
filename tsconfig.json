{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "lib",
		"moduleResolution": "node",
		"module": "esnext",
		"declaration": true,
		"lib": ["esnext"],
		"target": "esnext",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["*.ts", "src/*.ts"]
}
